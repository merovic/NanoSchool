<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedframebold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dumbpic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/picperson"
                android:background="@color/myPrimaryColor"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dumbpic"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.amirahmed.nanoschool.Utils.TextViewWithFont
                    android:id="@+id/senderName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="asfasfasfasfas"/>

                <com.amirahmed.nanoschool.Utils.TextViewWithFont
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="12.4.1234"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first"
                android:layout_toRightOf="@id/dumbpic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <com.amirahmed.nanoschool.Utils.TextViewWithFont
                    android:id="@+id/messageHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:text="asasfjasbfjasfabsfjbasf"/>

                <com.amirahmed.nanoschool.Utils.TextViewWithFont
                    android:id="@+id/messageBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textAlignment="textStart"
                    android:text="asasfjasbfjasfabsfjbasfasasfjasbfjasfabsfjbasfasasfjasbfjasfabsfjbasfasasfjasbfjasfabsfjbasfasasfjasbfjasfabsfjbasfasasfjasbfjasfabsfjbasfasasfjasbfjasfabsfjbasfasasfjasbfjasfabsfjbasf"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/second">

                <ImageView
                    android:id="@+id/deletebutton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/newtrach"/>

                <ImageView
                    android:id="@+id/downloadattachmentbutton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/newattch"/>

                <ImageView
                    android:id="@+id/replaybutton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:rotation="180"
                    android:src="@drawable/newarrow"/>

            </LinearLayout>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>