<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="320dp">

    <android.support.v7.widget.CardView
        android:id="@+id/maincard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardElevation="20dp"
        android:layoutDirection="ltr"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/school3"/>

            <LinearLayout
                android:id="@+id/titlelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <com.amirahmed.nanoschool.Utils.TextViewWithFont
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="المشاركة فى اليوم العالمى للطفل"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <com.amirahmed.nanoschool.Utils.TextViewWithFont
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اكتوبر ٢٠١٤"
                    android:textSize="12sp"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/colorAccent"/>

            </LinearLayout>


            <com.amirahmed.nanoschool.Utils.TextViewWithFont
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:text=" المشاركة فى اليوم العالمى للطفل المشاركة فى اليوم العالمى للطفل المشاركة فى اليوم العالمى للطفل المشاركة فى اليوم العالمى للطفل"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:textColor="#717171"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:textColor="#FFF"
                android:background="@color/myPrimaryDarkColor"
                android:text="اقرأ المذيد"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>