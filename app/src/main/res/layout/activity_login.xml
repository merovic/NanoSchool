<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mainpic"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/schoolamain"/>

    <LinearLayout
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:visibility="gone"
        android:layoutDirection="rtl">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/avatarlogin"
            android:layout_gravity="center"
            android:layout_margin="5dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/usenametext"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <AutoCompleteTextView
                android:id="@+id/usenametext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="textEmailSubject"
                android:textAlignment="textEnd"
                android:hint="اسم المستخدم"
                android:textColorHint="#005549"/>


        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:visibility="gone"
        android:layoutDirection="rtl">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/locker"
            android:layout_gravity="center"
            android:layout_margin="5dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordtext"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:passwordToggleEnabled="true">

            <AutoCompleteTextView
                android:id="@+id/passwordtext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textAlignment="textEnd"
                android:hint="كلمة السر"
                android:textColorHint="#005549"/>


        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/fingerprint"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_fingerprint_black_24dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:background="@drawable/roundedcirclelogin"
        android:text="تسجيل الدخول"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/login"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>

    <Button
        android:id="@+id/visitorbutton"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_circle_new"
        android:text="الدخول كزائر"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/keysilhouett"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:background="@color/black_p50"/>

    <com.amirahmed.nanoschool.Utils.TextViewWithFont
        android:id="@+id/resetpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="هل نسيت كلمة السر ؟"
        android:layout_gravity="center"
        android:textColor="@color/myPrimaryColor"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

</LinearLayout>