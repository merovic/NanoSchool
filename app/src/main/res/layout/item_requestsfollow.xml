<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="8dp"
    android:elevation="7dp">

    <RelativeLayout
        android:id="@+id/itemlayout2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layoutDirection="rtl">


        <ImageView
            android:id="@+id/list"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:padding="12dp"
            android:src="@drawable/list"/>

        <View
            android:id="@+id/view"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/list"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#919191"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/view"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">



                <com.amirahmed.nanoschool.Utils.TextViewWithFont
                    android:id="@+id/requestno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الطلب رقم ٠٠١"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:textColor="#000"/>

            <com.amirahmed.nanoschool.Utils.TextViewWithFont
                android:id="@+id/requestname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="طلب اثبات قيد للأدارة التعليمية"
                android:textSize="12sp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/requeststatuspic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sample"
                    android:layout_gravity="center"/>

                <com.amirahmed.nanoschool.Utils.TextViewWithFont
                    android:id="@+id/requeststatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/myPrimaryColor"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="تم تجهيز الطلب"
                    android:textSize="12sp"/>

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:rotation="90"
            android:visibility="gone"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:layout_alignParentLeft="true"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
