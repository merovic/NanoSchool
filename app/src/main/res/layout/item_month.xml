<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="3dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layoutDirection="rtl">


            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/subject"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@color/myPrimaryColor">

                    <com.amirahmed.nanoschool.Utils.TextViewWithFont
                        android:id="@+id/date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="٢٣ مارس"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                    <com.amirahmed.nanoschool.Utils.TextViewWithFont
                        android:id="@+id/date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الاحد"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp">

                            <com.amirahmed.nanoschool.Utils.TextViewWithFont
                                android:id="@+id/subjectName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:text="اللغة العربية"/>

                            <com.amirahmed.nanoschool.Utils.TextViewWithFont
                                android:id="@+id/teacherName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="المعلم/احمد ابراهيم"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#F9F9F9"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/aplusgray"/>

                            <com.amirahmed.nanoschool.Utils.TextViewWithFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:textSize="12sp"
                                android:text="الدرجة النهائية"/>

                            <com.amirahmed.nanoschool.Utils.TextViewWithFont
                                android:id="@+id/fullmark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textColor="#FFF"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:textSize="12sp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:background="@color/myPrimaryColor"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="#919191"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/trophy"/>

                            <com.amirahmed.nanoschool.Utils.TextViewWithFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:textSize="12sp"
                                android:text="درحة النجاح"/>

                            <com.amirahmed.nanoschool.Utils.TextViewWithFont
                                android:id="@+id/passmark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textAlignment="center"
                                android:textColor="#FFF"
                                android:textSize="12sp"
                                android:layout_weight="1"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:layout_gravity="center"
                                android:background="@color/myPrimaryColor"/>

                        </LinearLayout>


                    </LinearLayout>




                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:rotation="90"
                        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:layout_gravity="center"/>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/myPrimaryColor"/>

    </LinearLayout>

</android.support.v7.widget.CardView>