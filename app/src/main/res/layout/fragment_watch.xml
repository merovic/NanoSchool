<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:layoutDirection="rtl">


    <com.amirahmed.nanoschool.Utils.TextViewWithFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تأكيد المزامنة مع الساعة الزكية"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <com.amirahmed.nanoschool.Utils.TextViewWithFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="هل انت موافق على ربط هاتفك بالساعة الذكية رقم:"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        android:textSize="12sp"/>

    <com.amirahmed.nanoschool.Utils.TextViewWithFont
        android:id="@+id/watchid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="f42f422f-24242r24-f2424f2f2-2f4f2f4f2"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="12sp"/>

    <com.amirahmed.nanoschool.Utils.TextViewWithFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="و اسم الساعة هو:"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <com.amirahmed.nanoschool.Utils.TextViewWithFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الساعة رقم ١"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="12sp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:src="@drawable/watchbig"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:layout_gravity="left">

        <com.amirahmed.nanoschool.Utils.TextViewWithFont
            android:id="@+id/cancelbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الغاء"
            android:textColor="@color/myPrimaryColor"
            android:layout_margin="16dp"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <com.amirahmed.nanoschool.Utils.TextViewWithFont
            android:id="@+id/okbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="موافق"
            android:layout_margin="16dp"
            android:textColor="@color/myPrimaryColor"
            android:textSize="12sp"
            android:textStyle="bold"/>

    </LinearLayout>


</LinearLayout>