<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include
        android:id="@+id/toolbar_actionbar_en"
        layout="@layout/toolbar_default_en"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/days2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layoutDirection="rtl"
        android:visibility="visible"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sun2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/roundedtext3"
            android:textSize="12sp"
            android:text="الاحد"/>

        <Button
            android:id="@+id/mon2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/roundedfill"
            android:textColor="#FFF"
            android:layout_margin="3dp"
            android:textSize="12sp"
            android:text="الاثنين"/>

        <Button
            android:id="@+id/tus2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/roundedtext3"
            android:textSize="12sp"
            android:text="الثلاثاء"/>

        <Button
            android:id="@+id/wed2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/roundedtext3"
            android:textSize="12sp"
            android:text="الاربعاء"/>

        <Button
            android:id="@+id/thur2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/roundedtext3"
            android:textSize="12sp"
            android:text="الخميس"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layoutDirection="rtl"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sun"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/mon"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/tus"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/wed"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/thur"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

    </LinearLayout>

<android.support.v7.widget.RecyclerView
    android:id="@+id/rv2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:layout_margin="5dp">

</android.support.v7.widget.RecyclerView>


</LinearLayout>
