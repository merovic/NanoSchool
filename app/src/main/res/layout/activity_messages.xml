<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include
        android:id="@+id/toolbar_actionbar_en"
        layout="@layout/toolbar_default_en"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/teacheredittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedgray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:editable="false"
            android:hint="اختر المرسل أليه من القائمة"
            android:drawableRight="@drawable/usermessage"
            android:drawableLeft="@drawable/plusmessage"
            android:drawablePadding="10dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="textStart"
            android:background="@drawable/roundedgray"
            android:drawableRight="@drawable/messagefor"
            android:drawablePadding="10dp"
            android:hint="عنوان الرسالة"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/roundedgray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="محتوى الرسالة"
            android:padding="10dp"/>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/attachedit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedgray"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="ارفاق ملف ان وجد"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:editable="false"
                android:layout_weight="1"
                android:drawableRight="@drawable/attachmentmessage"
                android:padding="10dp"/>

            <Button
                android:id="@+id/attachbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_fill"
                android:text="أرفق"/>

        </LinearLayout>

        <Button
            android:id="@+id/sendbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_fill"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="ارسال"/>


    </LinearLayout>



</LinearLayout>