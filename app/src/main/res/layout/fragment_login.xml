<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:id="@+id/mainlayout"
    android:minWidth="1000dp"
    android:minHeight="400dp">

    <LinearLayout
        android:id="@+id/skipbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:src="@drawable/error"/>

        <com.amirahmed.nanoschool.Utils.TextViewWithFont
            android:id="@+id/skiptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:text="Skip this Step"/>

    </LinearLayout>


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/facebook_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        app:fb_radius="2dp"
        app:fb_iconPosition="right"
        app:fb_fontIconSize="20sp"
        app:fb_iconPaddingRight="10dp"
        app:fb_iconPaddingLeft="10dp"
        app:fb_textSize="16sp"
        app:fb_text="Login with Facebook"
        app:fb_textColor="#ffffff"
        app:fb_defaultColor="#39579B"
        app:fb_focusColor="#6183d2"
        app:fb_fontIconResource="&#xf230;"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/twitter_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:fb_radius="2dp"
        app:fb_iconPosition="right"
        app:fb_fontIconSize="20sp"
        app:fb_iconPaddingRight="10dp"
        app:fb_iconPaddingLeft="10dp"
        app:fb_textSize="16sp"
        app:fb_text="Login with Twitter"
        app:fb_textColor="#ffffff"
        app:fb_defaultColor="#4BC5FF"
        app:fb_focusColor="#6183d2"
        app:fb_fontIconResource="&#xf099;"/>


    <Button
        android:id="@+id/registrationbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="120dp"
        android:background="@color/myPrimaryColor"
        android:textColor="#FFF"
        android:text="Registration"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/myPrimaryColor"
        android:textColor="#FFF"
        android:text="Login"
        android:layout_gravity="center"/>

</LinearLayout>