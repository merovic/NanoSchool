<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include
        android:id="@+id/toolbar_actionbar_en"
        layout="@layout/toolbar_default_en"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        card_view:cardElevation="4dp">

        <com.amirahmed.nanoschool.Utils.TextViewWithFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:padding="5dp"
            android:text="Arabic Language Exam for March 2018/2019"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="6dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <com.amirahmed.nanoschool.Utils.TextViewWithFont
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Details About Exam"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:background="@color/myPrimaryColor"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:src="@drawable/calendar"/>

                        <com.amirahmed.nanoschool.Utils.TextViewWithFont
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/myPrimaryColor"
                            android:textStyle="bold"
                            android:text="Exam Date"/>

                        <com.amirahmed.nanoschool.Utils.TextViewWithFont
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text1"
                            android:layout_toRightOf="@id/img1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="23 March 2018"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:src="@drawable/teacher"/>

                        <com.amirahmed.nanoschool.Utils.TextViewWithFont
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img2"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/myPrimaryColor"
                            android:textStyle="bold"
                            android:text="Teacher Name"/>

                        <com.amirahmed.nanoschool.Utils.TextViewWithFont
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text2"
                            android:layout_toRightOf="@id/img2"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="Abdelrahman Mahran"/>

                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="#000"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:src="@drawable/fullmark"/>

                        <com.amirahmed.nanoschool.Utils.TextViewWithFont
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img4"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/myPrimaryColor"
                            android:textStyle="bold"
                            android:text="Final Mark"/>

                        <com.amirahmed.nanoschool.Utils.TextViewWithFont
                            android:id="@+id/finall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_below="@+id/text4"
                            android:layout_toRightOf="@id/img4"
                            android:layout_marginTop="5dp"
                            android:text="20"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:src="@drawable/pass"/>

                        <com.amirahmed.nanoschool.Utils.TextViewWithFont
                            android:id="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img5"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/myPrimaryColor"
                            android:layout_marginRight="5dp"
                            android:textStyle="bold"
                            android:text="Pass Mark"/>

                        <com.amirahmed.nanoschool.Utils.TextViewWithFont
                            android:id="@+id/pass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text5"
                            android:layout_marginLeft="35dp"
                            android:layout_toRightOf="@id/img5"
                            android:layout_marginTop="5dp"
                            android:text="10"/>

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/attention"/>

                <com.amirahmed.nanoschool.Utils.TextViewWithFont
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img3"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/myPrimaryColor"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:text="Exam Requerments"/>

                <com.amirahmed.nanoschool.Utils.TextViewWithFont
                    android:id="@+id/req"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text3"
                    android:layout_toRightOf="@id/img3"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Bring your Pen and tools"/>

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="6dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <com.amirahmed.nanoschool.Utils.TextViewWithFont
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Exam Result"
                android:textColor="#FFF"
                android:background="@color/myPrimaryColor"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:visibility="visible"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/calendar"/>

                        <com.amirahmed.nanoschool.Utils.TextViewWithFont
                            android:id="@+id/text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img6"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/myPrimaryColor"
                            android:textStyle="bold"
                            android:text="Exam Mark"/>

                        <com.amirahmed.nanoschool.Utils.TextViewWithFont
                            android:id="@+id/score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text6"
                            android:layout_marginLeft="35dp"
                            android:layout_toRightOf="@id/img6"
                            android:layout_marginTop="5dp"
                            android:text="17"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/teacher"/>

                        <com.amirahmed.nanoschool.Utils.TextViewWithFont
                            android:id="@+id/text7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img7"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/myPrimaryColor"
                            android:textStyle="bold"
                            android:text="Teacher Comment"/>

                        <com.amirahmed.nanoschool.Utils.TextViewWithFont
                            android:id="@+id/comment"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_below="@+id/text7"
                            android:layout_toRightOf="@id/img7"
                            android:layout_marginTop="5dp"
                            android:text="Student is developed but needs some following"/>

                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="#000"/>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <com.amirahmed.nanoschool.Utils.CircleDisplay
                        android:id="@+id/circleDisplay"
                        android:layout_width="72dp"
                        android:layout_height="84dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"/>

                    <com.amirahmed.nanoschool.Utils.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Percentage"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textColor="@color/myPrimaryColor"
                        android:layout_below="@id/circleDisplay"/>

                </RelativeLayout>


            </LinearLayout>

            <com.amirahmed.nanoschool.Utils.TextViewWithFont
                android:id="@+id/empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exam not started yet or probably marking still not finished.."
                android:textAlignment="center"
                android:visibility="gone"
                android:textSize="18sp"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>